<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_weight="1">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTime"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_1"
        android:background="@drawable/round_background_normal"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lines="1"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/size_3"
        app:autoSizeMaxTextSize="@dimen/size_4"
        app:autoSizeMinTextSize="@dimen/size_3"
        app:autoSizeTextType="uniform"
        tools:background="@drawable/round_background_selected"
        tools:text="S"
        tools:textColor="@color/colorSecondary" />
</FrameLayout>
